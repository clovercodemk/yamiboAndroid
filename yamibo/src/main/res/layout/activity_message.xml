<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp"
        android:background="@color/light_yellow"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_message_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/deep_brown"
            android:textSize="15sp"
            android:alpha="0.6"
            android:text="公共信息"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txt_message_private"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/deep_brown"
            android:textSize="15sp"
            android:alpha="0.6"
            android:text="私人信息"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/light_yellow"
        android:layout_height="2dp"
        >
        <TextView
            android:id="@+id/txt_message_tabline"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:background="@color/light_brown"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/gray"></LinearLayout>

    <com.yamibo.main.yamibolib.widget.NoScrollViewPager
        android:id="@+id/viewpager_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.yamibo.main.yamibolib.widget.NoScrollViewPager>
</LinearLayout>